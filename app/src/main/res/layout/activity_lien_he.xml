<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/lienheimage"
    tools:context="activity.LienHeActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarlienhe"
        android:background="#65BC4A"
        app:titleTextColor="#111"
        app:title="Liên Hệ"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawableLeft="@drawable/khai"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="#111"
            android:text="Trưởng nhóm: Đam mê công nghệ và chơi game - Nguyễn Hoàng Khải."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawableLeft="@drawable/tuan"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="5dp"
            android:textColor="#111"
            android:text="Thành viên: Kẻ hủy diệt của làng hội họa thế giới - Picasso Anh Tuấn."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawableLeft="@drawable/tri"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="5dp"
            android:textColor="#111"
            android:text="Thành viên: Ông trùm săn sale đồ Công nghệ điện tử -  Đỗ Minh Trí."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawableLeft="@drawable/huy"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="5dp"
            android:textColor="#111"
            android:text="Thành viên: Kẻ vảy nến lên code và trưởng ban công nghệ - Huỳnh Quốc Huy."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>