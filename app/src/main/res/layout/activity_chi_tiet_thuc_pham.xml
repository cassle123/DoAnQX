<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.ChiTietThucPham"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarchitietthucpham"
        android:background="#65BC4A"
        app:title="Chi Tiết Thực Phẩm"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imageviewchitietthucpham"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <LinearLayout
            android:weightSum="5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textviewtenchitietthucpham"
                    android:text="Tên thực phẩm:"
                    android:textStyle="bold"
                    android:textColor="#111"
                    android:layout_margin="5dp"
                    android:textSize="19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textviewgiachitietthucpham"
                    android:layout_marginLeft="5dp"
                    android:textSize="19sp"
                    android:text="Giá thực phẩm:"
                    android:textColor="#f20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <Spinner
                    android:layout_marginLeft="5dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/spinner"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:id="@+id/spinner"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </Spinner>
                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/radiusbutton"
                    android:id="@+id/buttondatmua"
                    android:textColor="#111"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    android:text="Giỏ Hàng"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#D61DA8"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_gravity="center"
            android:text="Mô tả thực phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="19sp"
                android:paddingBottom="10dp"
                android:id="@+id/textviewmotachitietthucpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </ScrollView>
    </LinearLayout>
</LinearLayout>