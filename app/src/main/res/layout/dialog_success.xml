<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <FrameLayout
        android:background="#80FAFAFA"
        android:layout_width="fill_parent"
        android:layout_height="250dp">
        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="bottom"
            android:background="#4A4545"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:text="Cảm ơn quý khách đã mua hàng"
                    android:layout_marginTop="70dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_trove"
                    android:layout_marginTop="20dp"
                    android:text="trở về"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:background="@drawable/background_button_dialog"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:padding="1dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_tick"
            android:src="@drawable/alertdialog"
            android:layout_gravity="center_horizontal|top"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </FrameLayout>
</LinearLayout>

